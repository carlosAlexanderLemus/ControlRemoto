<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewGridElement">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CheckBoxAloneCenter">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:buttonTint">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewTituloCentrado">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAcentTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TextViewInformacionDialog">
        <item name="android:textColor">@color/textInformation</item>
        <item name="android:textSize">@dimen/text_size_information</item>
    </style>

    <style name="CheckBoxDialogElement">
        <item name="android:textColor">@color/textInformation</item>
        <item name="android:textSize">@dimen/text_size_information</item>
        <item name="android:buttonTint">@color/colorInformationHeader</item>
        <item name="android:layout_marginLeft">@dimen/margin_border</item>
        <item name="android:layout_marginRight">@dimen/margin_border</item>
        <item name="android:layout_marginTop">@dimen/marfin_border_top</item>
    </style>

    <style name="CheckBoxDialogNormal">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:buttonTint">@color/colorInformationHeader</item>
        <item name="android:layout_marginRight">@dimen/margin_border</item>
    </style>

    <style name="MyButtonDialog">
        <item name="android:background">@color/buttomBackgroud</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_information</item>
    </style>

    <style name="TextViewTituloDialog">
        <item name="android:background">@color/colorAcentTitle</item>
        <item name="android:layout_height">@dimen/height_texview_title_select_item</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TextViewTituloDialogFull">
        <item name="android:background">@color/colorAcentTitle</item>
        <item name="android:layout_height">@dimen/height_texview_title_select_item</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ButtonFooter">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonMenuPopUp">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="TextViewItemNormal">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextViewInformationDecoration">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAcentTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="EditTextInformation">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
</resources>
