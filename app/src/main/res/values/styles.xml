<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewGridElement">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CheckBoxAloneCenter">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:buttonTint">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewTituloCentrado">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAcentTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TextViewInformacionDialog">
        <item name="android:textColor">@color/textInformation</item>
        <item name="android:textSize">@dimen/text_size_information</item>
    </style>

    <style name="CheckBoxDialogElement">
        <item name="android:textColor">@color/textInformation</item>
        <item name="android:textSize">@dimen/text_size_information</item>
        <item name="android:buttonTint">@color/colorInformationHeader</item>
        <item name="android:layout_marginLeft">@dimen/margin_border</item>
        <item name="android:layout_marginRight">@dimen/margin_border</item>
        <item name="android:layout_marginTop">@dimen/marfin_border_top</item>
    </style>

    <style name="MyButtonDialog">
        <item name="android:background">@color/buttomBackgroud</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_information</item>
    </style>
</resources>
