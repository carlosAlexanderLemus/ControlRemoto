<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_dialog_select_device"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dec_titulo_select_item"
        style="@style/TextViewTituloDialog"
        android:text="@string/titulo_seleccionar_dispositivo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_device_selected" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_selected_name_device"
                style="@style/TextViewItemNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_selected_ip_device"
                style="@style/TextViewItemNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_botones"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancelar_conexion"
            style="@style/ButtonFooter"
            android:layout_height="match_parent"
            android:text="@android:string/no" />

        <Button
            android:id="@+id/btn_aceptar_conexion"
            style="@style/ButtonFooter"
            android:layout_height="match_parent"
            android:text="@android:string/ok" />
    </LinearLayout>
</LinearLayout>