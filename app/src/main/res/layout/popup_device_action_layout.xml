<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/accion_modifire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon_modifire"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:tint="@android:color/white"
            app:srcCompat="?android:attr/listChoiceIndicatorMultiple" />

        <Button
            android:id="@+id/btn_device_modifire"
            style="@style/ButtonMenuPopUp"
            android:text="@string/modifire_device" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/accion_delate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon_delete"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:tint="@android:color/white"
            app:srcCompat="?android:attr/listChoiceIndicatorMultiple" />

        <Button
            android:id="@+id/btn_device_delete"
            style="@style/ButtonMenuPopUp"
            android:text="@string/delete_device" />
    </LinearLayout>
</LinearLayout>